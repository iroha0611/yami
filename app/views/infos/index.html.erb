<p id="notice"><%= notice %></p>

<h1>Listing Infos</h1>
<% if user_signed_in? %>
<li>
  <%= link_to('logout',destroy_user_session_path, :method => :delete) %>
</li>
<% else %>
<%= link_to('login',user_session_path) %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @infos.each do |info| %>
      <tr>
        <td><%= info.name %></td>
        <td><%= link_to 'Show', info %></td>
      <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_info_path(info) %></td>
        <td><%= link_to 'Destroy', info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Info', new_info_path %>
